	searchCallback = (err, post) ->
		if err
			console.error err
			return

		$inputSearch = $('#search')
		$searchModal = $('#search-modal')

		if $inputSearch.val().length > 0
			$.get
				url: "/searches/find"
				dataType: "script"
				data: { p: post }
				success: (data) ->
					li = ""
					ul = ""
					for k of data
						li = li + "<li><a href='" + data[k].url + "'>" + data[k].email + "</a></li>"
					ul = "<ul>" + li + "</ul>"
					$("#find-result").html(ul)
			$searchModal.css "display","block"
		else
			$searchModal.css "display","none"
		#console.log $modal.val().length
		return

	return
