<%= form_for @mainmenu do |f| %>

  <% @mainmenu.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
	<% end %>

  <%= f.hidden_field :parent_id, :value => @mainmenu.parent_id %>

	<div class="form-group">
	  <%= f.label :title, "title", class: "col-sm-3 control-label" %>
	  <%= f.text_field :title, class: "form-control" %>
	</div>


  <div class="form-group">
    <%= f.label :text, "New text", class: "col-sm-3 control-label" %>
    <%= f.text_area :text, :rows => 8, class: "form-control" %>
	</div>

  <div class="form-group">
	  <%= f.submit "Create", class: "btn btn-default" %>
  </div>

 <% end %>